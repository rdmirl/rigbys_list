<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    	<ul>
    		<li>
			<%= f.label :name %>
			<%= f.text_field :name %>
			</li>
			<li>
			<%= f.label :email %>
			<%= f.text_field :email %>
			</li>
			<li>
			<%= f.label :password %>
			<%= f.password_field :password %>
			</li>
			<li>
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			</li>
			<li>
			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
			</li>
      	</ul>
    <% end %>
  </div>
</div>